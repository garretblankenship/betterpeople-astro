<style>
    section#register {
        padding: 0px 14px;
    }

    section#register div.flex-container {
        display: flex;
        border-radius: 40px;
        padding: 20px 24px;
        flex-direction: column;
        border: 2px solid #d2d2d2;
    }

    section#register div.flex-container > div {
        width: 100%;
    }

    section#register div.left {
        padding: 44px 4px;
    }

    section#register div.left h2 {
        margin-bottom: 56px;
    }

    section#register div.left h3 {
        margin-bottom: 56px;
    }

    section#register div.left h5 {
        margin-bottom: 40px;
    }

    section#register div.left h4 {
        margin-bottom: 40px;
        margin-top: 60px;
    }

    section#register div.left p.description {
        margin-bottom: 20px;
    }

    section#register div.left ul li {
        padding: 10px 0 10px 10px;
    }

    section#register div.right {
        border-radius: 20px;
        overflow: hidden;
        padding: 4px;
    }

    section#register .promo {
        width: 100%;
        min-width: 200px;
        max-width: 800px;
    }

    section#register .promo .video-wrapper {
        position: relative;
        width: 100%;
        overflow: hidden;
        padding-top: 58%;
    }

    section#register .credentials {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 40px;
    }

    section#register .credentials  div {
        width: 140px;
        height: 140px;
        margin: 10px 10px 0 10px;
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
    }

    section#register .credentials  div#cred-1{
        background-image: url(../assets/10.png);
    }

    section#register .credentials  div#cred-2{
        background-image: url(../assets/11.png);
    }

    section#register .credentials  div#cred-3{
        background-image: url(../assets/12.png);
    }

    section#register .credentials  div#cred-4{
        background-image: url(../assets/13.png);
    }

    section#register .credentials  div#cred-5{
        background-image: url(../assets/14.png);
    }

    .accordion-item {
        --tw-bg-opacity: 1;
        background-color: rgb(255 255 255 / var(--tw-bg-opacity, 1));
        border-radius: 0.75rem;
        overflow: hidden;
        margin: 20px 0px;
        border: 1px solid #d2d2d2;
    }

    .accordion-header {
        text-align: left;
        padding: 10px 20px;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        display: flex;
    }

    .accordion-header .headline {
        align-items: center;
        display: flex;
        gap: 20px;
    }

    section#register .accordion-header .headline h5 {
        margin: 0px;
    }

    .icon-container {
        background-color: #F9FAFB;
        color: #006F9B;
        width: 64px;
        height: 64px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .headline-icon {
        width: 30px;
        height: 30px;
    }

    .accordion-icon {
        transition-duration: 300ms;
        transition-property: transform;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        width: 24px;
        height: 24px;
    }

    .accordion-content {
        padding: 24px 24px 40px 24px;
    }

    @media only screen and (min-width:1000px) {
        section#register {
            padding: 0px 44px;
        }

        section#register div.flex-container {
            flex-direction: row;
        }

        section#register div.flex-container > div {
            width: 50%;
        }

        section#register div.left {
            padding: 44px;
        }

        section#register div.right {
            padding: 44px;
        }
    }
</style>

<script type="text/javascript">
    // Accordion functionality
    const accordionHeaders = document.querySelectorAll('.accordion-header');
    
    accordionHeaders.forEach(header => {
      header.addEventListener('click', () => {
        const content = header.nextElementSibling;
        const icon = header.querySelector('.accordion-icon');
        
        // Toggle current accordion
        content.classList.toggle('hidden');
        icon.classList.toggle('rotate-180');
        
